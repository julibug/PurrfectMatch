@model PurrfectMatch.Models.RegisterViewModel

@{
    ViewBag.Title = "Register";
}

<h2 class ="mb-4">Utwórz konto</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group mb-2">
        @Html.LabelFor(m => m.Username, "Nazwa użytkownika")
        @Html.TextBoxFor(m => m.Username, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Username)
    </div>

    <div class="form-group mb-2">
        @Html.LabelFor(m => m.Email, "E-mail")
        @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Email)
    </div>

    <div class="form-group mb-2">
        @Html.LabelFor(m => m.Password, "Hasło")
        @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.Password)
    </div>

    <div class="form-group mb-2">
        @Html.LabelFor(m => m.ConfirmPassword, "Potwierdź hasło")
        @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        @Html.ValidationMessageFor(m => m.ConfirmPassword)
    </div>

    <button type="submit" class="btn btn-primary mt-3">Zarejestruj konto</button>
}